#
#	pes
#
#	This script is a launch wrapper for PES.
#	

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

pesInstallDir="$DIR/../"
pesUserDir="$HOME/pes"
libPath="/opt/pes/lib"
logDir="$pesUserDir/log"
script="$pesUserDir/commands.sh"

mkdir -p $logDir

# remove previous script file
rm -f $script

# prevent console from power saving
machine=`uname -m`

if [ $machine == "armv7l" ]; then
	setterm -blank 0
	export QT_QPA_PLATFORM=eglfs
fi

# set-up environment

#libcecPath="/opt/libcec/current/lib"
#pythonPath="/opt/libcec/current/lib/python2.7/dist-packages:/opt/libcec/current/lib/python2.7/dist-packages/cec:$pesInstallDir/lib"

#if [ -d $libcecPath ]; then
#	if [ -z $LD_LIBRARY_PATH ]; then
#		export LD_LIBRARY_PATH="$libcecPath"
#	else
#		export LD_LIBRARY_PATH="$libcecPath:$LD_LIBRARY_PATH"
#	fi
#fi

pythonPath="$pesInstallDir/python:/opt/pes/python3"

if [ -z $PYTHONPATH ]; then
	export PYTHONPATH="$pythonPath"
else
	export PYTHONPATH="$PYTHONPATH:$pythonPath"
fi

if [ -d $libPath ]; then
	if [ -z $LD_LIBRARY_PATH ]; then
		export LD_LIBRARY_PATH=$libPath
	else
		export LD_LIBRARY_PATH=$libPath:$LD_LIBRARY_PATH
	fi
	export PYSDL2_DLL_PATH=$libPath
fi

$pesInstallDir/python/pes/main.py $@

#if [ $? -eq 0 ]; then
#	if [ -e $script ]; then
#		chmod 700 $script
#		exec $script
#	else
#		exit 0
#	fi
#else
#	echo "PES experienced an error!"
#	exit 1
#fi
